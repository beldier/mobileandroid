<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DishTitle" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/TitleTextColor</item>
    </style>

    <style name="DishTitle.TitleBold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SubText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/TextColor</item>
    </style>
    <style name="addFab" parent="@style/Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="srcCompat">@drawable/ic_forward_white_24</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>