<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MyServicesActivity">

        <TextView
            android:id="@+id/textViewStartService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Result start services" />

        <Button
            android:id="@+id/buttonStartService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_service" />

        <Button
            android:id="@+id/buttonStopService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop_service" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheckBox" />

        <TextView
            android:id="@+id/textViewIntentService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Result intent service" />

        <Button
            android:id="@+id/buttonStartIntentService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_intent_service" />
    </LinearLayout>
</layout>